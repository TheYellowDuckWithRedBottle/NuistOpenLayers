@using XinYiThree.ViewModels
@model SignViewModel
@{ 
    ViewData["Title"] = "注册";
}
<div class="container">
    <div class="userLogin">
        <form asp-action="Signin" class="form-signin" asp-controller="Account" method="post">
            <h2 class="form-signin-heading" style="text-align: center">用户注册</h2>
            <div class="form-group">
                <input asp-for="Username" id="UserName" name="UserName" class="form-control" placeholder="请输入用户名" />
                <span class="glyphicon glyphicon-user"></span>
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="邮箱" />
                <span class="glyphicon glyphicon-envelope"></span>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <input asp-for="SID" class="form-control" placeholder="学号" />
                <span asp-validation-for="SID"></span>
                <span asp-validation-for="SID"></span>
            </div>
            <div class="form-group">
                <input asp-for="IdCardNo" class="form-control" placeholder="身份证号" />
                <span asp-validation-for="IdCardNo"></span>
            </div>
            <div class="form-group">
                <input asp-for="BirthDate" class="form-control" placeholder="出生日期" />
                <span asp-validation-for="BirthDate"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="请输入密码" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">注册</button>
            </div>
            <div asp-validation-summary="All"></div>
        </form>
    </div>
    
</div>
