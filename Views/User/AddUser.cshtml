
@using XinYiThree.ViewModels;
@model UserAddViewModel
<form methord="post" asp-action="AddUser">
    <h2 class="form-signin-heading" style="text-align:center">添加用户</h2>
    <div class="form-group">
        <input asp-for="UserName" class="form-control" placeholder="用户名" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <input asp-for="Email" class="form-control" placeholder="邮箱" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <input asp-for="SID" class="form-control" placeholder="学号" />
        <span asp-validation-for="SID"></span>
    </div>

    <div class="form-group">
        <input asp-for="IdCardNo" class="form-control" placeholder="身份证号" />
        <span asp-validation-for="IdCardNo"></span>
    </div>
    <div class="form-group">
        <input asp-for="BirthDate" class="form-control" placeholder="密码" />
        <span asp-validation-for="BirthDate"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control" placeholder="密码" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="invalid" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">添加</button>
    </div>
    <a asp-action="index" class="btn btn-secondary">返回列表</a>
</form>
