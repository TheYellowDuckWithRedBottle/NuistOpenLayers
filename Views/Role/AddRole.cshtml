
@using XinYiThree.ViewModels;
@model CreateRoleViewModel
<div class="userLogin">
    <form methord="post" asp-action="AddUser">
        <h2 class="form-signin-heading" style="text-align:center">添加角色</h2>
        <div class="form-group">
            <input asp-for="RoleName" class="form-control" placeholder="填写角色名称" />
            <span asp-validation-for="RoleName"></span>
        </div>


        <div class="invalid" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">添加</button>
        </div>
        <a asp-action="index" class="btn btn-secondary">返回列表</a>
    </form>

</div>