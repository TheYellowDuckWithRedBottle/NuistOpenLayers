@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
<div class="userLogin">
    <table class="table userLogin userLogin">
        <thead class="thead-dark">
            <tr>
                <th scope="col">角色Id</th>
                <th scope="col">角色名</th>
                <th scope="col">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Name</td>

                    <td>
                        <form asp-action="DeleteRole" asp-route-id="@u.Id" method="post">
                            <a asp-action="EditRole" asp-route-id="@u.Id" class="btn btn-primary">
                                编辑
                            </a>
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('确认删除？')">
                                删除
                            </button>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <a class="text-center" asp-controller="Role" asp-action="AddRole">添加角色</a>
</div>